<div class="container" style="background-color: white">
  <div class="col-xs-12 col-sm-3">
    <%= render "filter_nav" %>
  </div>
  <div class="col-xs-12 col-sm-9" style="padding-top: 20px;">
    <% @posts.in_groups_of(4, false) do |row_of_posts| %>
      <div class="row">

        <% row_of_posts.each do |post| %>

          <%= render partial: "posts/post", object: post %>

        <% end %>

      </div>
    <% end %>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <ul class="pager">
        <li class="previous"><%= link_to_previous_page @posts, "previous" %></li>
        <li class="next"><%= link_to_next_page @posts, "next" %></li>
      </ul>
      <p class="lead"><%= page_entries_info @posts %></p>
    </div>
  </div>
</div>
