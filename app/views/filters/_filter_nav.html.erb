<h2>Sort</h2>
<div class="btn-group-vertical" style="display: block;">
  <% @valid_sorts.each do |sort, title| %>
    <%= link_to title, filters_path(sort.to_sym, @filter), class: "btn btn-sm #{current_page?(filters_path(sort.to_sym, @filter)) ? "btn-success" : "btn-default"} btn-block" %>
  <% end %>
</div>

<!--this head is a title helper-->
<%= header "#{@valid_filters[@filter.to_s].upcase} | #{@sort.upcase}" %>

<h2>Filter</h2>
<div class="btn-group-vertical" style="display: block;">
  <% @valid_filters.each do |filter, title| %>
    <%= link_to title, filters_path(@sort, filter), class: "btn btn-sm #{current_page?(filters_path(@sort, filter)) ? "btn-success" : "btn-default"} btn-block" %>
  <% end %>
</div>