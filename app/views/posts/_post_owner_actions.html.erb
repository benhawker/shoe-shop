<% if current_user && current_user.id == @post.user_id %>
  <%= link_to edit_post_path(@post), class: "btn btn-inverse edit-add" do %>
    <i class="icon-edit icon-white"></i>
    Edit Post
  <% end %>

  <%= render partial: 'shared/filepicker' %>

  <%= link_to post_path(@post, post: {status_enum: Post.statuses[:deleted]}), method: :patch, data: {confirm: "Please confirm you want to stop listing these on SolesOut"}, class: "btn edit-add btn-danger pull-right" do %>
    <%= t('post.delete') %>
  <% end %>
  
  <div class="status-update">
    <strong>Current Status:</strong>
    <%= simple_form_for @post do |f| %>
      <%= f.input :status_enum, collection: @post.valid_statuses, label_method: lambda {|key| key[0].to_s.titleize }, prompt: @post.status, required: false, label:false  %>
      <%= f.submit class: "btn btn-inverse" %>
    <% end %>
  </div>
  
<% end %>

