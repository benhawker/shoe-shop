<% if post_owner? %>
  <div class="row">
    <div class="col-xs-12">
      <%= link_to "Edit Post", edit_post_path(@post), class: "btn btn-default" %>
      <%= link_to "Add Image", new_post_image_path(@post), class: "btn btn-default", id: "trigger-filepicker" %>
      <%= link_to t('post.delete'),
                  post_path(@post, post: {status_enum: Post.statuses[:deleted]}),
                  method: :patch,
                  data: {confirm: "Please confirm you want to stop listing these on SolesOut"},
                  class: "btn btn-danger pull-right" %>
    </div>
  </div>


  <div class="status-update">
    <strong>Current Status:</strong>
    <%= simple_form_for @post do |f| %>
      <%= f.input :status_enum,
                  collection: @post.valid_statuses,
                  label_method: lambda { |key| key[0].to_s.titleize },
                  prompt: @post.status,
                  required: false,
                  label: false
      %>
      <%= f.submit class: "btn btn-inverse" %>
    <% end %>
  </div>

  <script type="text/javascript">
    var pick = function () {
      filepicker.pick(function (FPFile) {

        console.log(JSON.stringify(FPFile));

        $.ajax({
          type: "POST",
          url: '<%= post_images_path(@post) %>',
          data: { image: { url: FPFile.url } },
          dataType: "JSON"
        }).success(function (json) {
          window.location.reload();

        });

        return false;

      });
    };
    $(document).on('click', 'a#trigger-filepicker', function (e) {
      e.preventDefault();
      pick()
    });

    $(document).ready(function () {
      if (!$('.post-image').length) {
        pick()
      } else {
        var status = "<%= @post.status %>";
        if (status === "draft") {
          window.location.href = window.location.origin + window.location.pathname + "#sell-these-shoes"
        }
      }


    });
  </script>
<% end %>

<%= render partial: 'elements/modal', locals: {
  modal_id: "sell-these-shoes",
  modal_header: "Sell These Shoes!",
  modal_content: "Great looking kicks. Activate the listing!"
} %>
