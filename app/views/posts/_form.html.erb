<%= simple_form_for(@post) do |f| %>
  <%= f.input :brand %>
  <%= f.input :title %>
  <%= f.association :size, collection: Size.all, prompt: "Choose a Size" %>
  <%= f.input :price %>
  <%= f.input :body %>
  <%= f.input :status, as: :select, collection: [:draft, :for_sale] %>
  <%= f.submit "Submit", class: "btn btn-inverse btn-large span3" %>
<% end %>
