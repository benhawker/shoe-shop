<% if post.sold? %>
  <%= image_tag("sold-out-stamp-large.png", style: "width: 300px;") %>
<% end %>

<% if post.for_sale? %>
  <% if current_user %>
    <% if user.email %>
      <script src="/assets/paypal-button.min.js?merchant=<%= user.email %>" 
          data-button="buynow" 
          data-name="<%= post_title post %>"
          data-quantity="1" 
          data-amount="<%= post.price %>.00" 
          data-currency="USD" 
          data-shipping="0" 
          data-tax="0" 
          data-callback="<%= callback_post_url(post) %>"
      ></script>
      <% else %>
        <small> <%= mail_to "info@solesout.com", "something went wrong, please email us", subject: "buy now button is missing for post id: #{post.id}" %>  </small>
      <% end %>

  <% else %>
    <%= link_to  login_path, class: "btn btn-mini btn-warning" do %>
      <i class="icon-chevron-right icon-white"></i>
      Login to Buy
      <i class="icon-chevron-left icon-white"></i>
    <% end %>

  <% end %>

<% end %>

<% if post.draft? %>
  <%= link_to "Draft Mode", '#', class: 'btn btn-mini btn-danger' %>
<% end %>
