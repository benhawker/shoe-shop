<% if user.email %>
  <script src="/assets/paypal-button.min.js?merchant=<%= user.email %>" 
      data-button="buynow" 
      data-name="<%= post_title post %>"
      data-quantity="1" 
      data-amount="<%= post.price %>.00" 
      data-currency="USD" 
      data-shipping="0" 
      data-tax="0" 
      data-callback="<%= callback_post_url(post) %>"
   async>
   </script>
<% else %>
    <small> <%= mail_to "info@solesout.com", "something went wrong, please email us", subject: "buy now button is missing for post id: #{post.id}" %>  </small>
<% end %>
