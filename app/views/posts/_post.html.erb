<div class="col-xs-12 col-sm-3">
  <% if post.sold? %>
    <%= image_tag("sold-out-stamp-large.png", size: "100", style: "position:absolute;left:0;top:20px;") %>
  <% end %>

  <%= link_to post do %>

    <% if post.images_count > 0 %>

      <% if mobile_device? %>
        <%= image_tag post.images.first.url_size(370), class: 'img-responsive img-rounded' %>
      <% else %>
        <%= image_tag post.images.first.url_size(215), class: 'img-responsive' %>
      <% end %>

    <% else %>
      <% if mobile_device? %>
        <%= image_tag "http://placehold.it/370x370", class: 'img-responsive img-rounded' %>
      <% else %>
        <%= image_tag "http://placehold.it/215x215", class: 'img-responsive' %>
      <% end %>
    <% end %>
  <% end %>

  <div>
    <span class="title"><%= truncate(post.title, length: 40) %></span>
  </div>

  <div>
    <%= number_to_currency(post.price, precision: 0) %> -
    <%= link_to post.user.username, user_path(post.user), class: 'author' %>
  </div>
</div>
