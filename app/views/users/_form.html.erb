<%= simple_form_for @user, remote: true do |f| %>
  <%= f.input :username %>
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :password_confirmation %>
  <%= f.submit "Create", class: "btn btn-inverse", data: { disable_with: "i'd like to take a minute just sit right there" } %>
<% end %>
