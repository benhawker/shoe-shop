<!DOCTYPE html>
<html>
<head>
  <title><%= yield(:title) %> <%= site_title %>, Buying Shoes, Selling Shoes</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <meta name="google-site-verification" content="q6v9pd9XSk1f_V1QSOisUMSGDGY72yHlun_gMKr7_uw"/>
  <%= robots %>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
<%= render partial: 'shared/header_nav' %>

<% if @notifications.present? %>
  <%= render partial: 'shared/notices_alerts_popups' %>
<% end %>

<%= yield %>

<div class='container'>
  <div class="row">
    <div class="col-xs-12">
      <!-- footer starts here -->
      <footer class="footer">
        <%= render partial: 'shared/footer' %>
        <% if current_admin %>
          <p class="alert">
            <%= link_to 'Admin Dashboard', admin_root_path %>
          </p>
        <% end %>
      </footer>
      <!-- footer end here -->
    </div>
  </div>
</div>
<%= render partial: 'layouts/analytics' %>
</body>
</html>
