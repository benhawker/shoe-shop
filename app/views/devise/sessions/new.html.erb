<div class="container">
  <div class="col-xs-12 col-sm-6">
    <h2>
    </h2>
  </div>
  <div class="col-xs-12 col-sm-6">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.input :login, required: true, autofocus: true, input_html: {class: "form-control"} %>
        <%= f.input :password, required: true, input_html: {class: "form-control"} %>
        <div class="checkbox">
          <label>
            <%= f.input :remember_me, label: false, as: :boolean if devise_mapping.rememberable? %>
            Remember me! <small><i>(this will keep you logged in for longer)</i></small>
          </label>
        </div>
      </div>

      <div class="form-group">
        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
