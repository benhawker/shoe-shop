        role="dialog" aria-labelledby="modal-label" aria-hidden="true">

    <div class="modal-inner">
        <header id="modal-label">
        </header>
        <div class="modal-content">
          <%= simple_form_for :search, method: :get, url: posts_path, remote: true do |f| %>
            <%= f.search_field :query, placeholder: 'Search Posts', id: 'st-search-input', input_html: {class: 'col-xs-12', style: 'width: 100%;'} %>
          <% end %>

        </div>
        <footer><!-- Footer --></footer>
    </div>

