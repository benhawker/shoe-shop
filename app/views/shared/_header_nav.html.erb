<div class="navbar">
  <div class="navbar-inner">
    <div class="container">
      <button type="button" class="btn btn-navbar button-collapse" data-toggle="collapse" data-target=".col2">
        <i class='icon-user icon-white'></i>
      </button>
      <button type="button" class="btn btn-navbar pull-left button-collapse" data-toggle="collapse" data-target=".col1">
