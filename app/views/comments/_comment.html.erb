<li class="well">
  <p class="pull-right"><% if current_user && comment.user == current_user %>
    <%= link_to "edit", edit_comment_path(comment), class: 'btn btn-mini btn-inverse' %>
  <% end %></p>
  <h4 class="media-heading"><%= comment.body %></h4>
  <p class="pull-right">
    by <%= link_to comment.user.username, comment.user %>, <%= time_ago_in_words(comment.created_at) %> ago
  </p>
</li>
