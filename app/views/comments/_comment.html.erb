<li>
  <div class="media">
    <div class="media-object pull-left">
      <% if current_user && comment.user == current_user %>
        <%= link_to "edit", edit_comment_path(comment), class: 'btn btn-mini btn-inverse' %>
      <% end %>
    </div>
    <div class="media-body">
      <h4 class="media-heading"><%= comment.body %></h4>
      <p>by <%= comment.user.username %>, <%= time_ago_in_words(comment.created_at) %> ago</p>
    </div>
  </div>
</li>
