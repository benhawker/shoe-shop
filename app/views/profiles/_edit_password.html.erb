<section class="semantic-content" id="edit-password" tabindex="-1" role="dialog" aria-labelledby="modal-label" aria-hidden="true">
  <div class="modal-inner">
    <header id="modal-label">
      <h1><%= t('user.update.password') %></h1>
    </header>
    <div class="modal-content">
      <%= simple_form_for @user, url: profile_path do |f| %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <%= f.button :submit, class: "btn btn-inverse", data: { disable_with: "loading..." } %>
      <% end %>
    </div>
    <footer>
      <a href="#!" title="Close this modal" data-close="Close" data-dismiss="modal">Close</a>
    </footer>
  </div>
  <a href="#!" class="modal-close" title="Close this modal" data-close="Close" data-dismiss="modal">Ã—</a>
</section>