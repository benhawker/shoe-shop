<%= render 'edit_email' %>
<%= render 'edit_password' %>
<%= header "Shoes and Pairs for #{@user.username}" %>
<div class="row-fluid">
  <h4>USERNAME: <strong><%= @user.username %></strong></h4>
  <% if @user.twitter.present? %>
    <h4>TWITTER: <%= @user.twitter %> - <%= link_to 'Update', auth_path(:twitter) %></h4>
  <% else %>
    <h4><%= link_to t('twitter.link'), auth_path(:twitter) %></h4>
  <% end %>
  <h4>EMAIL: <%= @user.email %> - <%= link_to t('user.update.email'), '#edit-email' %></h4>
  <!-- <h4>UPDATED: <%= time_ago_in_words @user.updated_at %> - <%= link_to t('user.update.password'), '#edit-password' %></h4> -->
</div>


<div class="panel panel-primary">
  <div class="panel-heading">
    <h2>Active Pairs</h2>
  </div>
  <ul class="list-group">
    <%= render partial: 'users/post', collection: @user.posts.active %>
  </ul>
</div>

  <hr>

  <div class="panel panel-info">
    <div class="panel-heading">
      <h2>Draft Posts</h2>
    </div>
      <ul class="list-group">
        <%= render partial: 'users/post', collection: @user.posts.drafted %>
      </ul>
  </div>

  <div class="panel panel-success">
    <div class="panel-heading">
      <h2>Sold Pairs</h2>
    </div>
    <ul class="list-group">
      <%= render partial: 'users/post', collection: @user.posts.inactive %>
    </ul>
  </div>

  <div class="panel panel-danger">
    <div class="panel-heading">
      <h2>Deleted Pairs</h2>
    </div>
    <ul class="list-group">
      <% @user.posts.removed.each do |p| %>
        <li class="list-group-item"><%= post_title p %></li>
      <% end %>
    </ul>
  </div>